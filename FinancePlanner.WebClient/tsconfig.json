{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./wwwroot/build/",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": true,
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules",
    "wwwroot"
  ]
}

